<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in site.posts %}
        {% if page.layout != nil %}
            {% if page.layout == 'campground' %}
                <url>
                    <loc>http://camp.joecode.com{{ page.url }}</loc>
                </url>
            {% endif %}
            {% if page.layout == 'trail' %}
                <url>
                    <loc>http://camp.joecode.com{{ page.url }}</loc>
                </url>
            {% endif %}
        {% endif %}
    {% endfor %}
</urlset>